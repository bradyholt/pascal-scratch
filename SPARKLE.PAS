PROGRAM SPARKLESAVER;
USES DOS, CRT, GRAPH;
VAR
 SCR1:INTEGER;
 SCR2:INTEGER;
 COL:INTEGER;
 MAXX:INTEGER;
 MAXY:INTEGER;
 TXT:TEXT;
 READIT:CHAR;
PROCEDURE GETRANDOMS;
 BEGIN
 RANDOMIZE;
 SCR1:=RANDOM(MAXX);
 COL:=RANDOM(15);
 SCR2:=RANDOM(MAXY);
 END;

BEGIN
 IF PARAMSTR(1) = '1' THEN
 BEGIN
 MAXX:=25;
 MAXY:=25;
 END;
 IF PARAMSTR(1) = '2' THEN
 BEGIN
 MAXX:=35;
 MAXY:=35;
 END;
 ASSIGN(TXT, 'TEXT.TXT');
 REPEAT
 CLRSCR;
 GETRANDOMS;
 TEXTCOLOR(COL);
 GOTOXY(SCR1,SCR2);
 RESET(TXT);
 WHILE NOT EOF(TXT) DO
 BEGIN
  READ(TXT, READIT);
  WRITE(READIT);
 END;
 TEXTCOLOR(BLACK);
 DELAY(2500);
 UNTIL KEYPRESSED;
 TEXTCOLOR(LIGHTGRAY);
 CLRSCR;
END.
